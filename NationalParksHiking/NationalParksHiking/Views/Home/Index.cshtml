@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid jumbotron">
    <h1>National Parks Hiking</h1>
    <p class="lead">Explore the beautiful scenery our country has to offer. The parks may have breathtaking views, but you may have to hike there to see it. Plan out your trip today.</p>
    @Html.ActionLink("See the Parks", "Details", "Parks", null, new {@class = "btn btn-primary btn-lg"})
</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel">

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="images/sliders/creek-bed-national-park.jpg" alt="Creek Bed National Park" title="Creek Bed National Park" class="img-responsive" />
        </div>
        <div class="item">
            <img src="images/sliders/desert-arches.jpg" alt="Desert Arches" title="Desert Arches" class="img-responsive" />
        </div>
        <div class="item">
            <img src="images/sliders/natural-runoff.jpg" alt="Natural Runoff" title="Natural Runoff" class="img-responsive" />
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

